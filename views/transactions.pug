extends layout

block content

  h1(style='text-align: center; color: blue')=title

  br

  h2(style='color: green; text-align: center')= aux_title
  br
  div(style='margin-left: 100px')
    table(style='width:80%', border='2')
      tr
        th Name
        th Phone Number
        th Units
        th Status
        th Date
      each item in results
        tr
          td #{item.name}
          td #{item.phone}
          td #{item.units}
          td #{item.state}
          td #{item.date}
  br
  br
  br
  a(href='/transactions/clearall' class='delete-btn') Clear records
